
<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="todo-title">Todo List</h2>
        <div>
            <a href="./new-todo" class="btn">Add todo</a>
        </div>
    </div>

    <table>
        <tr>
            <th><Title></Title></th>
            <th>Description</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Action</th>
        </tr>

        <tr>
            <!-- Getting documents based on fields from the document collection -->
                <% for( let i = 0; i < todos.length; i++) { %>
                <td><%= todos[i].title %></td>
                <td><%= todos[i].desc %></td>
                <td><%= moment(todos[i].createdAt).format('MMMM DD YYYY, h:mm:ss a') %></td>
                <td><%= moment(todos[i].updatedAt).format('MMMM DD YYYY, h:mm:ss a') %></td>
                <td>
                    <a href="/update-todo?id=<%= todos[i]._id %>" class="btn">Edit</a>
                    <a href="./delete-todo?id=<%= todos[i]._id %>" class="btn">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
<%- include("partials/footer") %>